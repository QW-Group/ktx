LCC=@LCC@
Q3ASM=@Q3ASM@
RM=@RM@
INSTALLDIR=$(PREFIX)/sbin

MODULE=../qwprogs.qvm

CFLAGS=-DQ3_VM -S -Wf-target=bytecode -Wf-g
INCFLAGS=-I../include
BOTFLAGS=

ifdef BOT_SUPPORT
	BOTFLAGS=-DBOT_SUPPORT
endif

SOURCES=g_main.c bg_lib.c buttons.c client.c combat.c doors.c g_cmd.c \
	g_mem.c g_spawn.c g_utils.c items.c mathlib.c misc.c plats.c player.c \
	q_shared.c server.c spectate.c subs.c triggers.c weapons.c world.c clan_arena.c \
	admin.c captain.c commands.c globals.c logs.c maps.c match.c motd.c vip.c vote.c \
	g_userinfo.c grapple.c runes.c ctf.c arena.c hoonymode.c race.c \
	sp_ai.c sp_boss.c sp_client.c sp_demon.c sp_dog.c sp_enforcer.c sp_fish.c sp_hknight.c sp_knight.c \
	sp_monsters.c sp_ogre.c sp_oldone.c sp_shalrath.c sp_shambler.c sp_soldier.c sp_tarbaby.c sp_wizard.c sp_zombie.c \
	maps_map_amphi2.c maps_map_dm3.c maps_map_dm4.c maps_map_dm6.c maps_map_povdmm4.c \
	bot_aim.c bot_blocked.c bot_botenemy.c bot_botgoals.c bot_bothazd.c bot_bothelp.c bot_botimp.c bot_botjump.c \
	bot_botpath.c bot_botphys.c bot_botstat.c bot_botthink.c bot_botwater.c bot_botweap.c bot_client.c \
	bot_commands.c bot_items.c bot_loadmap.c bot_match.c bot_movement.c bot_routing.c bot_world.c \
	fb_globals.c marker_load.c marker_util.c route_calc.c route_fields.c route_lookup.c \
	stats.c stats_json.c stats_xml.c files.c teamplay.c

OBJECTS=$(SOURCES:.c=.s)

all:		build

build:		$(MODULE)

install:	build
			../install-sh -c -m 755 $(MODULE) $(INSTALLDIR)

clean:
			$(RM) -f $(OBJECTS) $(MODULE) *~ ../*.map

distclean:	clean
			$(RM) -f *.orig *.rej *.tmp Makefile.vm


.c.s:
			$(LCC) $(CFLAGS) $(INCFLAGS) $(BOTFLAGS) -c -o $@ $<

$(MODULE):	$(OBJECTS)
			$(Q3ASM) -vq3 -o $(MODULE) $(OBJECTS) g_syscalls.asm
